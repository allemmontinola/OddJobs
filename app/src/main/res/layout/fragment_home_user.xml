<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_home_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:longClickable="true"
        android:orientation="vertical"
        android:visibility="visible"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/home_user_boom_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/home_user_tv_no_job_posted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="No Jobs Posted"
                android:textSize="28sp"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/home_user_hide_show_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/titleDraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableStart="@drawable/ic_subject"
                    android:gravity="fill"
                    android:padding="5dp"
                    android:text=" Title"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/home_user_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleDraw"
                    android:gravity="fill"
                    android:padding="4dp"
                    android:text=" title"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/descBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_user_title_tv"
                    android:layout_marginTop="3dp"
                    android:drawableStart="@drawable/ic_description"
                    android:gravity="fill"
                    android:padding="5dp"
                    android:text=" Job Description"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/home_user_desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descBox"
                    android:gravity="fill"
                    android:padding="4dp"
                    android:text=" Desc"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_user_desc_tv"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_tag"
                    android:padding="5dp"
                    android:text=" Tags"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/home_user_tag_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tag"
                    android:layout_marginStart="10dp"
                    android:gravity="fill"
                    android:padding="4dp"
                    android:text=" Tag"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/rewardTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_user_tag_tv"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_reward"
                    android:padding="5dp"
                    android:text=" Reward"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/home_user_reward_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rewardTv"
                    android:gravity="fill"
                    android:padding="4dp"
                    android:text="Reward range"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_user_reward_tv"
                    android:layout_marginTop="3dp"
                    android:drawableStart="@drawable/ic_status"
                    android:padding="5dp"
                    android:text=" Status "
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/home_user_accepted_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:gravity="fill"
                    android:padding="4dp"
                    android:text="Accepted Request"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/home_user_verify"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_user_accepted_tv"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_verify_job"
                    android:padding="5dp"
                    android:text=" Verify Job Status"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Tooltip"
                    android:textColor="#00FFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/home_user_viewMap_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_user_verify"
                    android:layout_centerInParent="true"
                    android:text="View in Map" />

            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>