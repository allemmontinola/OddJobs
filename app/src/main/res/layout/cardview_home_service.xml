<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:longClickable="true"
        android:orientation="vertical"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fullName_Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/iv_profile_Service"
                android:drawableStart="@drawable/ic_profile"
                android:gravity="fill"
                android:padding="8dp"
                android:text=" Owner"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Hek hek"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp"
                android:visibility="invisible" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_Service"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullName_Service"
                android:layout_toEndOf="@+id/iv_profile_Service"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTv_Service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:drawableStart="@drawable/ic_title"
                    android:gravity="fill"
                    android:padding="8dp"
                    android:text=" Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/descriptionTv_Service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailTv_View"
                    android:layout_marginStart="13dp"
                    android:drawableStart="@drawable/ic_descrip"
                    android:gravity="fill"
                    android:inputType="text"
                    android:padding="8dp"
                    android:text=" Description"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/rewardTv_Service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descriptionTv_Service"
                    android:layout_marginStart="13dp"
                    android:drawableStart="@drawable/ic_reward"
                    android:gravity="fill"
                    android:inputType="text"
                    android:padding="8dp"
                    android:text=" Reward"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>